<!DOCTYPE html>
<html>
  <head>
    <title>Play Game <%= game_id %> - SocketExpress</title>
    <style>
    </style>
  </head>
  <body>
    <h1>GAME <%= game_id %></h1>
    <h3><%= nickname %></h3>
    <div id="content">
      <p>Please wait until the host starts the game</p>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script>
      var socket = io();
      socket.on('game started', function(that_game_id) {
          if (that_game_id == <%= game_id %>){
            document.getElementById("content").innerHTML = "<p>Game started!</p>"
          }
      })
  </script>
  </body>
</html>
